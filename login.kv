<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'

        AsyncImage:
            source: 'app/assets/logo.png'
            size_hint: 1, None
            height: '200dp'

        MDTextField:
            id: username
            hint_text: "Username"
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            size_hint_x: None
            width: 300

        MDTextField:
            id: password
            hint_text: "Password"
            password: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: None
            width: 300

        MDRaisedButton:
            text: "Login"
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            on_release: app.login(username.text, password.text)


<SuccessScreen>:
    BoxLayout:
        orientation: 'vertical'

        MDLabel:
            text: "Login Successful!"
            halign: "center"

        MDRaisedButton:
            text: "Back to Login"
            pos_hint: {'center_x': 0.5}
            on_release: app.root.current = "login"

<FailScreen>:
    BoxLayout:
        orientation: 'vertical'

        MDLabel:
            text: "Login Failed!"
            halign: "center"

        MDRaisedButton:
            text: "Back to Login"
            pos_hint: {'center_x': 0.5}
            on_release: app.root.current = "login"
